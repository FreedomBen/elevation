source 'https://rubygems.org'

# Use debugger
# gem 'debugger', group: [:development, :test]
gem 'byebug', '~> 3.5.1', group: [:development, :test]

# Use colorizer for coloring output logs and other stuff
gem 'colorize', '~> 0.7.5'

# Use rspec for testing
gem "rspec", '~> 3.1.0', :group => [:development, :test]
gem "rspec-its", '~> 1.1.0', :group => [:development, :test]
gem "rspec-collection_matchers", '~>1.1.2', :group => [:development, :test]

# Some modules need test unit
gem "test-unit", :group => [:development, :test]
